@model IEnumerable<RentACarMVC.ViewModels.Auto.AutoListViewModel>
@{
    ViewBag.Title = "Index";
}

<div>
    <a href="@Url.Action("Create", "Autos")" class="btn btn-primary" style="float: right">
        <i class="far fa-file-alt"></i>
        Nuevo
    </a>
    <h2>Lista de Autos</h2>
    <hr />

</div>
@if (TempData["Msg"] != null)
{
    var msg = (string)TempData["Msg"];
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg.
    </div>

}
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.MovilId)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Patente)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Chofer)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Disponible)
            </th>

            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var modelo in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => modelo.MovilId)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.Patente)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.Tipo)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.Marca)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.Modelo)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.Chofer)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.Disponible)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Autos", new {id = modelo.AutoId})" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</a>
                <a href="#" class="btn btn-info"><i class="fas fa-list"></i> Detalle</a>
                <a href="@Url.Action("Delete", "Autos", new {id = modelo.AutoId})" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Borrar
                </a>


            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8"> No se ingresaron autos todavía</td>
            </tr>
        }
    </tbody>
</table>

