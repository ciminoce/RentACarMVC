@model RentACarMVC.ViewModels.Marca.MarcaListViewModel
@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Marca </h2>
<hr />
@using (Html.BeginForm("Delete", "Marcas", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(m => m.NombreMarca)
                @Html.TextBoxFor(m => m.NombreMarca, new { @class = "form-control col-md-6", disabled = "disabled" })
                @Html.ValidationMessageFor(m => m.NombreMarca, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button class="btn btn-danger" type="submit">Borrar</button>
                <a href="@Url.Action("Index", "Marcas")" class="btn btn-success">Volver</a>

            </div>
        </div>
        <div class="col-md-6" style="float: right">
            <img id="imgSalida" width="50%" height="50%" src="@Url.Content(Model.Logo)" />
        </div>
    </div>
}