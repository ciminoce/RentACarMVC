@model RentACarMVC.ViewModels.Modelo.ModeloListViewModel
@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Modelo</h2>
<hr />
@using (Html.BeginForm("Delete", "Modelos", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                @Html.LabelFor(m => m.Marca)
                @Html.TextBoxFor(m => m.Marca, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Tipo)
                @Html.TextBoxFor(m => m.Tipo, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NombreModelo)
                @Html.TextBoxFor(m => m.NombreModelo, new { @class = "form-control col-md-6", disabled = "disabled" })
            </div>

            <div class="form-group">
                <button class="btn btn-danger" type="submit">Borrar</button>
                <a href="@Url.Action("Index", "Modelos")" class="btn btn-success">Volver</a>

            </div>
        </div>
        <div class="col-md-6" style="float: right">
            <div class="container">
                <h2>Foto del Modelo</h2>
                
                <div class="card" style="width:400px">
                    <img class="card-img-top" id="imgSalida"src="@Url.Content(Model.Foto)" alt="Imagen del Modelo" style="width:100%">
                    <div class="card-body">
                        <h4 class="card-title">
                            @Model.NombreModelo
                        </h4>
                    </div>
                </div>
                <br>
  
            </div>

        </div>
    </div>
}

