@model RentACarMVC.ViewModels.Tipo.TipoEditViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Nuevo Tipo </h2>
<hr />
@using (Html.BeginForm("Create", "Tipos", FormMethod.Post))
{
    @Html.ValidationSummary(true,"",new{@class="text-danger"})
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control",autofocus="autofocus" })
        @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a href="@Url.Action("Index","Tipos")" class="btn btn-success">Volver</a>

    </div>
}

