@model RentACarMVC.ViewModels.Tipo.TipoListViewModel
@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Tipo</h2>
<hr/>
@using (Html.BeginForm("Delete","Tipos",FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m=>m.Descripcion)
        @Html.TextBoxFor(m=>m.Descripcion,new{@class="form-control",disabled="disable"})
    </div>

    <div class="form-group">
        <button class="btn btn-danger">
            <i class="fas fa-trash-alt"></i>
            Borrar
        </button>
        <a href="@Url.Action("Index", "Tipos")" class="btn btn-success">
            <i class="fas fa-backspace"></i>
            Volver
        </a>
    </div>
}

