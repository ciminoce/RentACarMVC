@model IEnumerable<RentACarMVC.ViewModels.Tipo.TipoListViewModel>
@{
    ViewBag.Title = "Index";
}
<div>
    <a href="@Url.Action("Create","Tipos")" class="btn btn-primary" style="float: right">Nuevo</a>
    <h2>Lista de Tipos de Vehículos</h2>
    <hr/>

</div>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Descripcion)
        </th>
        <th>

        </th>
    </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m=>item.Descripcion)
                    </td>
                    <td>
                        <a href="#" class="btn btn-warning">Editar</a>
                        <a href="#" class="btn btn-info">Detalle</a>
                        <a href="#" class="btn btn-danger">Borrar</a>

                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td>No se agregaron tipos todavía</td>
            </tr>
        }
    </tbody>
</table>
