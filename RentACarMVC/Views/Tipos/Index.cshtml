@model IEnumerable<RentACarMVC.ViewModels.Tipo.TipoListViewModel>
@{
    ViewBag.Title = "Index";
}
<div>
    <a href="@Url.Action("Create", "Tipos")" class="btn btn-primary" style="float: right">
        <i class="far fa-file-alt"></i>
         Nuevo
    </a>
    <h2>Lista de Tipos de Vehículos</h2>
    <hr />

</div>
@if (TempData["Msg"] != null)
{
    var msg = (string)TempData["Msg"];
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg.
    </div>

}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Descripcion)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Descripcion)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Tipos",new{id=item.TipoId})" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</a>
                        <a href="#" class="btn btn-info"><i class="fas fa-list"></i> Detalle</a>
                        <a href="@Url.Action("Delete", "Tipos", new {id = item.TipoId})" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Borrar
                        </a>

                    </td>
                </tr>
            }

        }
        else
        {
            <tr>
                <td>No se agregaron tipos todavía</td>
            </tr>
        }
    </tbody>
</table>
