@model IEnumerable<RentACarMVC.ViewModels.Usuarios.UsuarioListViewModel>
@{
    ViewBag.Title = "Index";
}

<div>
    <a href="@Url.Action("Create", "Usuarios")" class="btn btn-primary" style="float: right">
        <i class="far fa-file-alt"></i>
        Nuevo
    </a>
    @{ var rol = (string) TempData["Rol"]; }
    <h2>Lista de @rol</h2>
    <hr />

</div>
@if (TempData["Msg"] != null)
{
    var msg = (string)TempData["Msg"];
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg.
    </div>

}
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.MovilNumero)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var modelo in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => modelo.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(m => modelo.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(m => modelo.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(m => modelo.MovilNumero)

                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Usuarios",new{id=modelo.UsuarioId})" class="btn btn-warning"><i class="fas fa-edit"></i> Editar</a>
                        <a href="@Url.Action("Details","Usuarios",new{id=modelo.UsuarioId})" class="btn btn-info"><i class="fas fa-list"></i> Detalle</a>
                        <a href="@Url.Action("Delete", "Usuarios", new {id = modelo.UsuarioId})" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Borrar
                        </a>


                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4"> No se ingresaron usuarios todavía</td>
            </tr>
        }
    </tbody>
</table>
