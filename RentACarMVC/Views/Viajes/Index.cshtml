@using RentACarMVC.Models.Enums
@model IEnumerable<RentACarMVC.ViewModels.Viaje.ViajeListViewModel>
@{
    ViewBag.Title = "Index";
}

<div>
    <a href="@Url.Action("Create", "Viajes")" class="btn btn-primary" style="float: right">
        <i class="far fa-file-alt"></i>
        Nuevo
    </a>
    <h2>Lista de Viajes</h2>
    <hr />

</div>
@if (TempData["Msg"] != null)
{
    var msg = (string)TempData["Msg"];
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg.
    </div>

}
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.MovilId)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FechaHoraSalida)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FechaHoraLlegada)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Costo)
            </th>

            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var modelo in Model)
            {
                if (modelo.EstadoViaje == EstadoViaje.EnProceso)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => modelo.MovilId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.Cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.FechaHoraSalida)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.FechaHoraLlegada)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.Costo)
                        </td>
                        <td>
                            <a href="@Url.Action("Suspend", "Viajes", new {id = modelo.ViajeId})" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i> Suspender
                            </a>
                            <a href="@Url.Action("Finish", "Viajes", new {id = modelo.ViajeId})" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Finalizar
                            </a>


                        </td>
                    </tr>

                }
                else if (modelo.EstadoViaje==EstadoViaje.Suspendido)
                {
                    <tr style="background-color: bisque">
                        <td>
                            @Html.DisplayFor(m => modelo.MovilId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.Cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.FechaHoraSalida)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.FechaHoraLlegada)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.Costo)
                        </td>
                        <td>

                        </td>
                    </tr>
                   
                }
                else
                {
                    <tr style="background-color: lightblue">
                        <td>
                            @Html.DisplayFor(m => modelo.MovilId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.Cliente)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.FechaHoraSalida)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.FechaHoraLlegada)
                        </td>
                        <td>
                            @Html.DisplayFor(m => modelo.Costo)
                        </td>
                        <td>

                        </td>
                    </tr>

                }
               
            }
        }
        else
        {
        <tr>
            <td colspan="6"> No se viajes todavía</td>
        </tr>
        }
    </tbody>
</table>

