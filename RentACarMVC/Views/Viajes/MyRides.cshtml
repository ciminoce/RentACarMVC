@model IEnumerable<RentACarMVC.ViewModels.Viaje.ViajeListViewModel>
@{
    ViewBag.Title = "MyRides";
}
<form method="post" action="@Url.Action("RequestRide", "Viajes")">
    <div>
        <button type="submit" class="btn btn-primary" style="float: right">
            <i class="far fa-file-alt"></i>
            Solicitar Viaje
        </button>
        <h2>Lista de Mis Viajes</h2>
        <hr/>

    </div>

</form>

@if (TempData["Msg"] != null)
{
    var msg = (string)TempData["Msg"];
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Éxito!</strong> @msg.
    </div>

}
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.MovilId)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FechaHoraSalida)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.FechaHoraLlegada)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Costo)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.EstadoViaje)
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var modelo in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(m => modelo.MovilId)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.Cliente)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.FechaHoraSalida)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.FechaHoraLlegada)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.Costo)
            </td>
            <td>
                @Html.DisplayFor(m => modelo.EstadoViaje)
            </td>

        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6"> No se cargaron viajes todavía</td>
            </tr>
        }
    </tbody>
</table>

